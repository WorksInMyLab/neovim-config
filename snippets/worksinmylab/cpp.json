    "C++ Main": {
        "prefix": "cppmain",
        "body": [
            "/**",
            " * @file ${TM_FILENAME}",
            " * @author Sebastian Mueller (WorksInMyLab)",
            " * @date ${CURRENT_MONTH_NAME_SHORT} ${CURRENT_DATE}, ${CURRENT_YEAR}",
            " *",
            " * @brief Description.",
            " */",
            "",
            "/* C++ includes. */",
            "",
            "/* Project includes. */",
            "#include <mun/ArgParser.hpp>",
            "#include <mun/Memory.hpp>",
            "#include <mun/Terminal.hpp>",
            "",
            "/* Namespace. */",
            "namespace Horizon {",
            "",
            "/** Implementation detail. */",
            "namespace {",
            "",
            "/** Stores application settings. */",
            "struct Settings {",
            "  // Variables for settings go here",
            "};",
            "",
            "/**",
            " * Parses command line arguments.",
            " * @param argc The Number of arguments.",
            " * @param argv Array of arguments.",
            " * @return The application settings.",
            " * @throws runtime_error on failure.",
            " */",
            "Settings parseArgs(int argc, char **argv) {",
            "  /* Stores application settings. */",
            "  Settings settings;",
            "  /* Argument parser class. */",
            "  auto argParser = std::make_unique<ArgParser>(\"ToolName\", \"About\", VERSION);",
            "",
            "  try {",
            "    // Set options",
            "    argParser->addOption(\"-h\"sv, \"--help\"sv, \"Prints the help.\"sv, \"\"sv);",
            "",
            "    argParser->parse(argc, argv);",
            "",
            "    // Get option arguments",
            "",
            "    return settings;",
            "",
            "  } catch (const std::exception &e) {",
            "    throw;",
            "  }",
            "}",
            "",
            "} // namespace",
            "} // namespace Horizon",
            "",
            "using namespace Horizon;",
            "",
            "/**",
            " * The main function.",
            " * @param argc The number of command line arguments.",
            " * @param argv The command line arguments.",
            " * @return Status code.",
            " */",
            "int main(int argc, char **argv) {",
            "  /* Stores application settings. */",
            "  Settings settings;",
            "",
            "  try {",
            "    settings = parseArgs(argc, argv);",
            "",
            "    $0",
            "",
            "  } catch (const RuntimeError &r) {",
            "    Terminal::printException(r);",
            "    return exitFailure;",
            "  } catch (const std::exception &e) {",
            "    Terminal::printException(e);",
            "    return exitFailure;",
            "  }",
            "",
            "  return exitSuccess;",
            "}"
        ],
        "description": "C++ Main"
    },
